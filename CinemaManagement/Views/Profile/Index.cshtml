@model CinemaManagement.Models.Customer
@{
    ViewData["Title"] = "Tài khoản";
}

<div class="container py-4">
    <h2>Thông tin tài khoản</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <i class="bi bi-person-circle" style="font-size: 5rem;"></i>
                    <h4 class="mt-3">@Model.FullName</h4>
                    <p>@Model.Email</p>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" class="btn btn-primary">Chỉnh sửa thông tin</a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>Điểm tích lũy</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fs-1">@Model.MembershipPoints</span>
                        <span class="text-muted">điểm</span>
                    </div>
                    <p class="text-muted mt-2">Tích lũy 10 điểm để nhận ưu đãi</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Đặt vé gần đây</h5>
                    <a asp-action="BookingHistory" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
                </div>
                <div class="card-body">
                    <!-- Lịch sử đặt vé sẽ được hiển thị ở đây -->
                    <div class="list-group list-group-flush">
                        @await Component.InvokeAsync("RecentBookings", new { customerId = Model.CustomerId, count = 3 })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>